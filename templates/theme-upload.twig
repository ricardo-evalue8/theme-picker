{% block page_main %}
{# Upload Theme #}
<style>


.upload-plugin .install-help, .upload-theme .install-help {
	color: #555d66;
	font-size: 18px;
	font-style: normal;
	margin: 0;
	padding: 0;
	text-align: center;
}
input[type="file"] {
    display: none;
}
.custom-file-upload {
    border: 1px solid #ccc;
    display: inline-block;
    padding: 6px 12px;
    cursor: pointer;
}
</style>

<link rel="stylesheet" href="/../extensions/themepicker/web/card.css" />
<div class="col-md-3">
</div>
<div class="col-md-6">







<div class="panel panel-default panel-fileupload">
	<div class="panel-heading">
		<i class="fa fa-fw fa-cloud-upload"></i>
		&nbsp;Upload themes
	</div>
	<div class="panel-body">
		<p>
			Upload theme packages use them on your website.
		</p>
		<p>
			Allowed file types are:
			<span class="label label-default info-pop" data-title="" data-placement="left" data-html="true" data-content="Allowed file types are:<code>rar</code>, <code>zip</code>" data-original-title="" title="">
			<i class="fa fa-info-circle"></i>
			Types
			</span>
		</p>
		<i class="fa fa-fw fa-upload hidden"></i>
		<form name="file_upload" method="post" class="form-horizontal" enctype="multipart/form-data">
			<fieldset>
				<a class="file-input-wrapper btn btn-default  btn-secondary">
